<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ToDoListBlazor</a>
</div>

<AuthorizeView>
    <Authorized>
        <div>
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-list" aria-hidden="true"></span> To Do's
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="new">
                        <span class="oi oi-plus" aria-hidden="true"></span> Add To-Do
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="LogOut">
                        <span class="oi oi-account-logout" aria-hidden="true"></span> Sing Out
                    </NavLink>
                </li>
            </ul>
        </div>
    </Authorized>
    <NotAuthorized>
        <div>
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Register">
                        <span class="oi oi-sun" aria-hidden="true"></span> Sing up
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="Login">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Sign in
                    </NavLink>
                </li>
            </ul>
        </div>
    </NotAuthorized>
</AuthorizeView>
